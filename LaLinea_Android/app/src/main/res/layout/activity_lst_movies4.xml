<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:title="Mi aplicaciÃ³n"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPeliculas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/label_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new movie title:" />

    <EditText
        android:id="@+id/edit_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="New Movie Title" />

    <Button
        android:id="@+id/button_update_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Title"
        android:layout_gravity="center" />
</LinearLayout>

